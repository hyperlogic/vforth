;;; 0= ( a -- n )   does top of stack equal zero
:_ISZERO
        WORD _GTE
        WORD 0x0002
        DAT "0="
:ISZERO
        SET A, POP
        IFE A, 0x0000
        SET PUSH, 0xffff
        IFN A, 0x0000
        SET PUSH, 0x0000

        SET A, [I]              ; next
        ADD I, 1
        SET PC, A


;;; 0<> ( a -- n )   does top of stack not equal zero
:_ISNOTZERO
        WORD _ISZERO
        WORD 0x0003
        DAT "0<>"
:ISNOTZERO
        SET A, POP
        IFE A, 0x0000
        SET PUSH, 0x0000
        IFN A, 0x0000
        SET PUSH, 0xffff

        SET A, [I]              ; next
        ADD I, 1
        SET PC, A

