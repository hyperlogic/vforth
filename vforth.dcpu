;;; MOD ( a b -- a%b )
:_MOD
        WORD _DIV
        WORD 0x0003
        DAT "MOD"
:MOD_
        SET A, POP
        MOD A, POP
        SET PUSH, A

        SET A, [I]              ; next
        ADD I, 1
        SET PC, A

;;; /MOD ( a b -- a%b )
:_DIVMOD
        WORD _MOD
        WORD 0x0003
        DAT "/MOD"
:DIVMOD
        SET A, POP
        SET B, POP
        SET X, A
        DIV A, B
        MOD X, B
        SET PUSH, X             ; push quotent
        SET PUSH, A             ; push mod

        SET A, [I]              ; next
        ADD I, 1
        SET PC, A


;;; = ( a b - n )
:_EQUAL
        WORD _DIVMOD
        WORD 0x0001
        DAT "="
:EQUAL
        SET A, POP
        SET B, POP
        IFE A, B
        SET PC, EQUAL_ELSE
        SET PUSH, 0x0000
        SET PC, EQUAL_ENDIF
:EQUAL_ELSE
        SET PUSH, 0xffff
:EQUAL_ENDIF
        SET A, [I]              ; next
        ADD I, 1
        SET PC, A


;;; <> ( a b - n )
:_NOTEQUAL
        WORD _EQUAL
        WORD 0x0002
        DAT "<>"
:NOTEQUAL
        SET A, POP
        SET B, POP
        IFN A, B
        SET PC, NOTEQUAL_ELSE
        SET PUSH, 0x0000
        SET PC, NOTEQUAL_ENDIF
:NOTEQUAL_ELSE
        SET PUSH, 0xffff
:NOTEQUAL_ENDIF
        SET A, [I]              ; next
        ADD I, 1
        SET PC, A


;;; < ( a b - n )
:_LT
        WORD _NOTEQUAL
        WORD 0x0001
        DAT "<"
:LT
        SET A, POP
        SET B, POP
        IFG A, B
        SET PC, LT_ELSE
        SET PUSH, 0x0000
        SET PC, LT_ENDIF
:LT_ELSE
        IFE A, B
        SET PUSH, 0x0000
        IFN A, B
        SET PUSH, 0xffff
:LT_ENDIF
        SET A, [I]              ; next
        ADD I, 1
        SET PC, A


